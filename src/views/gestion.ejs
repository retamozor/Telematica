<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestion de casos</title>
    <%- include('templates/styles') %>
</head>

<body>
    <% if(role=='Admin') {%>
      <%- include('templates/header_admin') %>
    <% } else { %>
      <%- include('templates/header_1') %>
    <% } %>
        <div class="content-body center">
            <div class="panel">
                <h1>Gestión de casos</h1>
                <form action="/gestion" method="POST">

                    <div class="box">
                        <select name="type" id="Busqueda de casos" type="text" class="form-input">
                            <option value="nombre">Nombre</option>
                            <option value="id">Id</option>
                            <option value="cedula">Cedula</option>
                        </select>
                        <label class="form-label"> tipo de Busqueda </label>
                    </div>

                    <div class="box">
                        <input type="text" name="busqueda" id="search" class="form-input" placeholder=" ">
                        <label class="form-label" for="search">Busqueda de casos </label>
                    </div>

                    <div class="box">
                        <input type="submit" value="buscar"> </input>
                    </div>
                </form>

                <table >
                  <tr>
                      <th colspan="3">ID</th>
                      <td>
                        <% resultado.forEach(r=> { %>
                          <%= r.id%>
                        <% });%>
                      </td>
                  </tr>
                  <tr> 
                    <th colspan="3">Nombre</th>
                    <td>
                        <% resultado.forEach(r=> { %>
                          <%= r.nombre%>
                        <% });%>
                      </td>
                  </tr>
                  <tr> 
                    <th colspan="3">Cédula</th>
                    <td>
                        <% resultado.forEach(r=> { %>
                          <%= r.cedula %>
                        <% });%>
                      </td>
                  </tr>
                  <tr> 
                    <th colspan="3">Sexo</th>
                    <td>
                        <% resultado.forEach(r=> { %>
                          <%= r.sexo %>
                        <% });%>
                      </td>
                  </tr>
                  <tr> 
                    <th colspan="3">fecha de nacimiento</th>
                    <td>
                        <% resultado.forEach(r=> { %>
                          <%= r.nacimiento %>
                        <% });%>
                      </td>
                  </tr>
                  <tr> 
                    <th colspan="3">dir. residencia</th>
                    <td>
                        <% resultado.forEach(r=> { %>
                          <%= r.residencia %>
                        <% });%>
                      </td>
                  </tr>
                  <tr> 
                    <th colspan="3">dir. trabajo</th>
                    <td>
                        <% resultado.forEach(r=> { %>
                          <%= r.trabajo %>
                        <% });%>
                      </td>
                  </tr>
                  <tr> 
                    <th colspan="3">Resultado</th>
                    <td>
                        <% resultado.forEach(r=> { %>
                          <%= r.examen %>
                        <% });%>
                      </td>
                  </tr>
                  <tr> 
                    <th colspan="3">Fecha del examen</th>
                    <td>
                        <% resultado.forEach(r=> { %>
                          <%= r.fecha %>
                        <% });%>
                      </td>
                  </tr>
              </table>

            </div>
        </div>



</body>

</html>