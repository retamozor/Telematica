<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Iniciar sesion</title>
  <%- include('templates/styles') %>
</head>

<body>

  <div class="center">

    <div class="card">
      <div class="card-body">

        <a href="/"><img src="/resource/icon.png" alt="logo" class="imagen"></a>
        <h2>Iniciar sesion</h2>

        <% errors.forEach(error=> { %>
          <p><%= error.msg %></p>
        <% }); %>

        <form action="/signin" method="post">

          <div class="box">
            <input class="form-input" type="text" autocomplete="username" name="user" id="user" placeholder=" "><br>
            <label class="form-label" for="user">Usuario</label>
          </div>

          <div class="box">
            <input class="form-input" type="password" name="password" id="pass" placeholder=" "><br>
            <label class="form-label" for="pass">Contrase√±a</label>
          </div>

          <div class="box submit">
            <input type="submit" value="Iniciar sesion">
          </div>

        </form>
      </div>
    </div>
  </div>

</body>

</html>