<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Registrarse</title>
  <%- include('../templates/styles') %>
</head>

<body>

  <div class="center">

    <div class="card">
      <div class="card-body">

        <a href="/"><img src="/resource/icon.png" alt="logo" class="imagen"></a>
        <h2>Registrar</h2>
        <% errors.forEach(error=> { %>
          <p><%= error.msg %></p>
        <% }); %>
        <form action="/signup" method="post">
          <div class="row">
            <div class="box">
              <input class="form-input" type="text" name="name" id="name" placeholder=" "><br>
              <label class="form-label" for="name">Nombre</label>
            </div>

            <div class="box">
              <input class="form-input" type="text" name="last_name" id="last-name" placeholder=" "><br>
              <label class="form-label" for="last-name">Apellido</label>
            </div>
          </div>

          <div class="box">
            <input class="form-input" type="number" name="cedula" id="cedula" placeholder=" "><br>
            <label class="form-label" for="cedula">Cédula</label>
          </div>

          <div class="row">
            <div class="box">
              <input class="form-input" type="text" autocomplete="username" name="user" id="user" placeholder=" "><br>
              <label class="form-label" for="user">Usuario</label>
            </div>
            <div class="box">
              <select class="form-input" type="text"  name="rol" id="rol" placeholder=" ">
                <option value="2">Médico</option>
                <option value="3">Ayudante</option>
                <option value="1">Admin</option>
              </select>
              <label class="form-label" for="rol">Rol</label>
            </div>
          </div>

          <div class="box">
            <input class="form-input" type="password" name="password" id="pass" placeholder=" "><br>
            <label class="form-label" for="pass">Contraseña</label>
          </div>

          <div class="box">
            <input class="form-input" type="password" name="pass_confirm" id="confirm" placeholder=" "><br>
            <label class="form-label" for="confirm">Confirmación</label>
          </div>

          <div class="row">
            <div class="box submit">
              <input type="submit" value="Registrar">
            </div>
          </div>

        </form>
      </div>
    </div>
  </div>

</body>

</html>