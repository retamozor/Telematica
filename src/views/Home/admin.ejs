<%- include('../templates/header') %>
<title>AbiEps</title>
</head>
<body class="admin-grid">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/timeago.js/4.0.2/timeago.full.min.js" integrity="sha512-wb3lqal2VtYhmlPAr232VP+Zus676CFAEYdywxIUSxG6F/X9WhN6SpREkWUdwBvMpd6gCKuKTGHhdum6m1wOvQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script src="/js/load.js"></script>
  <script src="/js/index.api.js"></script>
  <script src="/js/index.js"></script>
  <h1 class="main-title">AbiEps</h1>

  <div class="card">
    <div class="card-body">
      <a href="/">
        <div class="profile">
          <div class="profile-circle" alt="">
            <img class="avatar" src="/resource/profile.svg" alt="">
          </div>
        </div>
      </a>
      <h2>Registrar</h2>
      <form id="form">
        <div class="row">
          <div class="box">
            <input class="form-input" type="text" name="name" id="name" placeholder=" "><br>
            <label class="form-label" for="name">Nombre</label>
          </div>

          <div class="box">
            <input class="form-input" type="text" name="last_name" id="last-name" placeholder=" "><br>
            <label class="form-label" for="last-name">Apellido</label>
          </div>
        </div>

        <div class="box">
          <input class="form-input" type="number" name="cedula" id="cedula" placeholder=" "><br>
          <label class="form-label" for="cedula">Cédula</label>
        </div>

        <div class="row">
          <div class="box">
            <input class="form-input" type="text" autocomplete="username" name="user" id="user" placeholder=" "><br>
            <label class="form-label" for="user">Usuario</label>
          </div>
          <div class="box">
            <select class="form-input" type="text"  name="rol" id="rol" placeholder=" ">
              <option value="2">Médico</option>
              <option value="3">Ayudante</option>
              <option value="1">Admin</option>
            </select>
            <label class="form-label" for="rol">Rol</label>
          </div>
        </div>

        <div class="box">
          <input class="form-input" type="password" name="password" id="pass" placeholder=" "><br>
          <label class="form-label" for="pass">Contraseña</label>
        </div>

        <div class="box">
          <input class="form-input" type="password" name="pass_confirm" id="confirm" placeholder=" "><br>
          <label class="form-label" for="confirm">Confirmación</label>
        </div>

        <div class="row">
          <div class="box submit">
            <input type="submit" value="Registrar">
          </div>
        </div>

      </form>
    </div>
  </div>

  <input type="checkbox" id="toggle" class="toggle">
  <div class="circle profile-bg">
    <div class="user-info">
      <label for="toggle" class="toggle-label">
        <img class="img-user" src="/resource/ayudante.svg" alt="">
      </label>
      <div class="hide">
        <h3><%= rol %></h3>
        <p class="info"><%= name %> <%= last_name %></p>
        <p class="info">CC. <%= cc %></p>
        <a href="/logout">Sign out</a>
      </div>
    </div>
  </div>
</body>
</html>